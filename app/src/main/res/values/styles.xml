<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--顶部状态栏-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowExitTransition">@transition/fade</item>
        <item name="android:windowEnterAnimation">@transition/fade</item>
        <item name="android:windowReenterTransition">@transition/fade</item>
    </style>

    <!--登录注册页样式-->
    <style name="Login_register_Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@android:color/darker_gray</item><!--一般控件的选中效果-->
        <item name="android:windowExitTransition">@transition/fade</item>
        <item name="android:windowEnterAnimation">@transition/fade</item>
        <item name="android:windowReenterTransition">@transition/fade</item>
    </style>

    <!--EditText样式-->
    <style name="EditText_Theme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorGray</item><!--选中前-->
        <item name="colorControlActivated">@color/colorLittle</item><!--选中后-->
    </style>

    <!-- 主页 -->
    <style name="HomeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--顶部状态栏-->
        <item name="colorPrimary">@color/colorMustard</item>
        <item name="android:windowExitTransition">@transition/fade</item>
        <item name="android:windowEnterAnimation">@transition/fade</item>
        <item name="android:windowReenterTransition">@transition/fade</item>
    </style>


    <!--以下为聊天UI-->
    <style name="text_subhead_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/text_subhead</item>
    </style>

    <style name="text_body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_sub</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="GreenButton" parent="AppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="colorButtonNormal">@color/colorMustard</item>
    </style>
    <style name="WhiteButton" parent="AppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="colorButtonNormal">@color/colorShallowButton</item>
    </style>

</resources>
